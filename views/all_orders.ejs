                        </a>
                    </div>
                </div>
            </nav>
        </div>
    </header>
    <!-- end header section -->

    <h1 class="my-h1" style="margin-left: 40%;">
        Product DATABASE
    </h1>
    <a href="/place_order" class="btn btn-sm btn-primary my-button" style="margin: 1% 0 1% 46%;">Order New Product</a>
    <br>
    <table class="table table-dark table-striped my-table" style="width: 80%; margin-left: 10%;">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Quantity</th>
                <th>Product Id</th>
                <th>Order ID</th>
                <th>Order Date</th>
                <th>Order Status</th>
            </tr>
        </thead>
        <tbody>
            <% productList.forEach(product=>{ %>

                <tr>
                    <td>
                        <%= product.id %>
                    </td>
                    <td>
                        <%= product.name %>
                    </td>
                    <td>
                        <%= product.quantity %>
                    </td>
                    <td>
                        <%= product.product_id %>
                    </td>
                    <td>
                        <%=product.orderId %>
                    </td>
                    <td>
                        <%=product.orderDate %>
                    </td>
                    <td>
                        <%=product.orderStatus %>
                    </td>
                    <td>
                        <a href="edit/<%= product._id %>" class="btn btn-sm btn-primary">Update Product</a>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>

</body>

